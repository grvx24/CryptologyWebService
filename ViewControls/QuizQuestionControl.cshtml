@using CryptoWebService.Models.Quiz;
@model QuestionViewModel;

<div name="@(Model)_QuestionControl">
    <div class="row">
        <div class="col-lg-12">
            @(Model.QuestionContent)
        </div>
        <div class="col-lg-6">
            @(Model.Answers[0])
        </div>
        <div class="col-lg-6">
            @(Model.Answers[1])
        </div>
        <div class="col-lg-6">
            @(Model.Answers[2])
        </div>
        <div class="col-lg-6">
            @(Model.Answers[3])
        </div>
    </div>
</div>