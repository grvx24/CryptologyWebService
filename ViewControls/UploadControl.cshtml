@model string;

<div name="@(Model)_UploadControl">
    <div class="row">
        <div class="col-lg-12">
            <div class="input-group">
                <label class="input-group-btn">
                    <span class="btn btn-primary">
                        Wczytaj plik&hellip; <input id="@(Model)Uploader" type="file" style="display: none;" accept="image/png">
                    </span>
                </label>
                <input id="@(Model)Text" type="text" class="form-control" readonly>
            </div>
        </div>
    </div>
</div>

<script>
    $('#@(Model)Uploader').change(function () {
        var filename = $(this).val().split('\\').pop();
        $('#@(Model)Text').val(filename);
    });
</script>