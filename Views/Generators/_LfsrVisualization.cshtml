<script src="~/lib/custom/d3.min.js"></script>
<script src="~/js/generators/LfsrVisualization.js"></script>

<div class="row">
    <div class="col-lg-12">
        <h2 class="title">
            LFSR wizualizacja
        </h2>
        <br />
        <h3 class="text-center">Podaj wartości początkowe i kliknij "Stwórz rejestr". Maksymalna długość rejestrów dla wizualizacji to 10 bitów.</h3>
    </div>
</div>
<div class="row">
    <svg width="1000" height="400" id="lfsrSvg">

    </svg>
</div>
<div class="row">
    <div class="col-lg-3">
        <br/>
        <button id="nextStepBtn" class="btn btn-lg btn-success center-block">Wygeneruj bit</button>
    </div>
    <div class="col-lg-3">
        <div class="form-group inline"> 
            <label for="registerText">Stan rejestru</label>
            <input value="10101" maxlength="10" id="registerText" class="form-control" type="text"/>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="form-group inline"> 
            <label for="feedbackFunctionViz">Wielomian (np. 2,4,5)</label>
            <input value="2,3" id="feedbackFunctionViz" class="form-control" type="text"/>
        </div>
    </div>
    <div class="col-lg-3">
        <br/>
        <button id="createRegisterBtn" class="btn btn-lg btn-primary center-block">Stwórz rejestr</button>
    </div>
</div>


<script>

    $(document).ready(function() {
        LfsrVisualizationInit();
    });
</script>