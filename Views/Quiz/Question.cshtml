@model CryptoWebService.Models.Quiz.QuestionViewModel

<div id="Question_@(Model.Number)" class="question col-lg-12">
    <div class="text-center">
        <label class ="questionContent">
            @Model.QuestionContent
        </label>
    </div>

        @{
            for (int i = 0; i < Model.Answers.Count(); i++)
            {
                <div class="Answer col-lg-6 text-center">
                    <input id="in_answer_@(Model.Number)_@i" type="checkbox" />
                    <label class="LabelAnswer" style="width:100%;height:100%;" for="in_answer_@(Model.Number)_@i">@Model.Answers[i].AnswerContent</label>
                </div>
            }
        }

    <div class="col-lg-12" >
        <label style="float:right">
            @(Model.Number)/@(Model.AmountOfQuestionsInQuiz)
        </label>
    </div>
</div>

